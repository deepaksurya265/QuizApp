<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCommon"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".User.ViewQuestions">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quizo Meter"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="50dp"/>





            <TextView
                android:id="@+id/test_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Test"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#606060"/>


            <TextView
                android:id="@+id/test_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Test"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/poppins"
                android:textColor="#606060"/>


            <TextView
                android:id="@+id/timerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorPrimary"/>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/questions_list"/>


        </LinearLayout>





    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">



        <Button
            android:id="@+id/previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_notok_bg"
            android:fontFamily="@font/poppins"
            android:text="Previous"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#49E6DD"
            android:textSize="16dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_ok_bg"
            android:fontFamily="@font/poppins"
            android:shadowColor="#49E6DD"
            android:text="Next"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16dp" />


    </LinearLayout>






</LinearLayout>