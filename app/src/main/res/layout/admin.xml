<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">





    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_vertical"
        android:text="Test Name"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="#61DDD1"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/testid"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Test ID"/>



    <LinearLayout android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/correct"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/button_ok_bg"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/wrong"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_notok_bg"
            android:textSize="12dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textColor="#49E6DD"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_notok_bg"
            android:textSize="12dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textAllCaps="false"
            android:textColor="#49E6DD"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>












    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#61DDD1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>


</LinearLayout>